/* pages/sign/forget/index.wxss */
.hide {
  display: none;
}
.forget {
  padding: 50rpx 30rpx;
  border-top: 1rpx solid #cccccc;
}
.title {
  font-size: 40rpx;
}
.item-text {
  border-bottom: 1rpx solid #efefef;
  width: 100%;
  padding: 20rpx 0;
  font-size: 28rpx;
  line-height: 60rpx;
  height: 60rpx;
}
.item-text input {
  width: 100%;
  height: 60rpx;
  vertical-align: middle;
}
.code input {
  width: 400rpx;
  display:inline-block;
}
.code .get {
  line-height: 60rpx;
  color: #ffffff;
  text-align: center;
  padding: 0 30rpx;
  border-radius: 30rpx;
  background-color: #29abae;
  float: right;
}
.code .active {
  background-color: #999999;
}
.tip { 
  font-size: 26rpx;
  color: #707070;
  line-height: 26rpx;
  margin-top: 30rpx;
}

.sure-btn {
  background-color: #29abae;
  color: #ffffff;
  font-size: 40rpx;
  border-radius: 8rpx;
  text-align: center;
  line-height: 80rpx;
  margin-top: 100rpx;
}