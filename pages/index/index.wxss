@import "../templates/index/commend_books/list-item.wxss";
@import "../templates/index/theme_books/list-item.wxss";
@import "../templates/index/like_books/list-item.wxss";

.user-login-info {
  display: flex;
  flex-direction:row;
  height: 150rpx;
  background-color: #434343;
}
.user-login-info .vip-icon {
  width: 50rpx;
  height: 49rpx;
  margin: 50rpx 33rpx 0rpx 60rpx;
}

.user-login-info text {
  line-height: 150rpx;
  font-size: 30rpx;
  color: #c39e1f;
}

.user-login-info button {
  line-height: 50rpx;
  margin-top: 50rpx;
  margin-right: 60rpx;
  font-size: 26rpx;
  height: 50rpx;
  background-color: #c39e1f;
  color: #434343;
  text-align: center;
  float: right;
  width: 120rpx;
  padding: 0;
}

.commend-books-title {
  border-bottom: 2rpx solid #CCCCCC;
  height: 80rpx;
}

.commend-books {
  background-color: #fff;
}

.commend-books-title text {
  font-size: 30rpx;
  margin-left: 30rpx;
  line-height: 80rpx;
  color: #0a0a0a;
  font-weight: bold;
}

.commend-books-list {
  height: 280rpx;
  border-bottom: 2rpx solid #fff;
}

.commend-books-scroll {
  display: flex;
  white-space: nowrap; 
  padding:0 0 0 15rpx;
}

.theme-books {
  margin-top: 14rpx;
  background-color: #fff;
}

.theme-books-title {
  border-bottom: 2rpx solid #CCCCCC;
  height: 80rpx;
}

.theme-books-title text:nth-child(1) {
  font-size: 30rpx;
  margin-left: 30rpx;
  line-height: 80rpx;
  color: #0a0a0a;
  font-weight: bold;
}

.theme-books-title text:nth-child(2) {
  float:right; 
  margin-right: 50rpx;
  font-size: 26rpx;
  color: #707070;
  font-weight: unset;
  line-height: 80rpx;
}

.theme-books-list {
  height: 395rpx;
  border-bottom: 1px solid #fff;
  display: flex;
  flex-direction: row;
  padding:0 15rpx;
}

.like-books {
  margin-top: 14rpx;
  background-color: #fff;
}

.like-books-title {
  border-bottom: 2rpx solid #CCCCCC;
  height: 80rpx;
  position: relative;
}

.like-books-title text:nth-child(1) {
  font-size: 30rpx;
  margin-left: 20rpx;
  line-height: 80rpx;
  color: #0a0a0a;
  font-weight: bold;
}

.like-books-title text:nth-child(2) {
  float:right; 
  margin-right: 80rpx;
  font-size: 26rpx;
  color: #707070;
  line-height: 80rpx;
}

.like-books-list {
  height: 280rpx;
  border-bottom: 1px solid #fff;
}

.invite {
  width: 100%;
  height: 100%;
  background-color:rgba(0,0,0,0.5);
  position: absolute;
  top: 0;
}

.invite .bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  z-index: 9;
}

.invite .close {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  top: 75rpx;
  right: 65rpx;
  z-index: 10;
}

.invite .btn {
  width: 248rpx;
  height: 80rpx;
  border: 2rpx solid #ffffff;
  border-radius: 10rpx;
  color: #ffffff;
  font-size: 32rpx;
  line-height: 80rpx;
  text-align: center;
  position: absolute;
  left: 250rpx;
  top: 750rpx;
  z-index: 11;
}

.hide {
  display: none;
}

.refresh {
  width: 35rpx;
  height: 35rpx;
  position: absolute;
  right: 30rpx;
  top: 22rpx;
}


.user {
  height: 140rpx;
  background-color: #434343;
}

.user .is-login {
  display: flex;
  flex-direction:row;
}

.user .is-login button {
  line-height: 50rpx;
  font-size: 26rpx;
  height: 60rpx;
  background-color: #CDAD00;
  color: #636363;
  width: 110rpx;
  padding: 4rpx;
  position: absolute;
  right: 40rpx;
  top: 45rpx;
}

.user .user-name {
  margin-top: 15rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #CDAD00;  
}

.user .user-name image {
  width: 75rpx;
  height:22rpx; 
  margin-left: 30rpx;
  vertical-align:middle;
  margin-bottom: 7rpx;
}

.user .user-novip-name {
  margin-top: 15rpx;
  line-height: 120rpx;
  font-size: 26rpx;
  color: #CDAD00;  
}

.user .user-novip-name image {
  width: 80rpx;
  height:26rpx; 
  margin-left: 30rpx;
  vertical-align:middle;
  margin-bottom: 7rpx;
}

.user .user-vip {
  line-height: 0rpx;
  font-size: 23rpx;
  color: #CDAD00;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  vertical-align:middle;
  margin: 20rpx 30rpx;
}

.img-border {
  border-radius:4%;
}