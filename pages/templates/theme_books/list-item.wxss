.book-item {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #e3e3e3;
  height: 200rpx;
  padding: 30rpx;
}

.cover {
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.content {
  width: 475rpx;
  font-size: 32rpx;
  position: relative;
}

.content .title {
  line-height: 33rpx;
  white-space: pre-wrap;
  font-weight: bold;
}

.content .summary {
  padding-top: 10rpx;
  height: 100rpx;
  line-height: 33rpx;
  color: #808080;
  display: -webkit-box;
  white-space: pre-wrap;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
}

.content .summary text {
  font-size: 27rpx;
  line-height: 33rpx;
  padding-right: 20rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3;
  color: #808080;
}

.content .record {
  font-size: 24rpx;
  color: #808080;
  position: absolute;
  bottom: 0;
}

.content .record .read-count {
  padding-right: 50rpx;
}

.go {
  line-height: 200rpx;
  color: #808080;
  font-size: 26rpx;
}
.img-border {
  border-radius: 4%;
}