<template name="likeBooksByListItem">
  <view class="like-book-item" data-uid="{{userInfo.id}}" data-mid="{{id}}" bindtap="bindBooksDetail">
    <image src="{{coverImg}}"></image>
    <view class="content">
      <view class="title">
        <text>{{title}} | {{unscramble}}</text>
      </view>
      <view class="summary">
        <text>{{summary}}</text>
      </view>
      <view class="time">
        <text>{{audioDuration}}</text>
      </view>
    </view>
  </view>
</template>