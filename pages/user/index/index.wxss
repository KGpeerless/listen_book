/* pages/user/index.wxss */
.hide { display: none; }
.info {
  width: 100%;
  height: 200rpx;
  position: relative;
  border-bottom: 15rpx solid #efefef;
}
.info .bg {
  width: 100%;
  height: 200rpx;
  position: absolute;
}
.info .user {
  padding: 50rpx 0;
  width: 100%;
  height: 100rpx;
  position: absolute;
}
.info .user image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  vertical-align:middle;
  margin-left: 30rpx;
  margin-right: 30rpx;
}
.info .user .name {
  display: inline-block;
  font-size: 30rpx;
}
.info .login {
  position: absolute;
  width: 100%;
  height: 200rpx;
  text-align:center;
}
.info .btn {
  border: 1rpx solid #ffffff;
  color: #ffffff;
  padding: 15rpx 20rpx;
  font-size: 30rpx;
  border-radius: 8rpx;
  display: inline-block;
  margin-top: 70rpx;
}

.item {
  height: 100rpx;
  border-bottom: 1rpx solid #cccccc;
  font-size: 30rpx;
  padding: 0 30rpx;
}
.item view {
  line-height: 100rpx;
  float: left;
}
.item image:nth-child(1) {
  float:left;
  width: 40rpx;
  height: 38rpx;
  vertical-align:middle;
  margin: 32rpx 20rpx 0 0;
}
.item image:nth-child(3) {
  float: right;
  width: 12rpx;
  height: 20rpx;
  vertical-align:middle;
  margin-top: 40rpx;
}
.invite image:nth-child(1) {
  height: 45rpx;
  margin: 27rpx 20rpx 0 0;
}
.download image:nth-child(1) {
  height: 40rpx;
  margin: 32rpx 20rpx 0 0;
}
.clear-border {
  border: 0;
}
.logout {
  border-bottom: 15rpx solid #efefef;
  border-top: 15rpx solid #efefef;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #ff2d41;
}