/* pages/listen/index.wxss */

.info {
  padding: 116rpx 30rpx 0 30rpx;
  text-align: center;
}
.info image {
  width: 300rpx;
  height: 390rpx;
}
.info .title {
  color: #282828;
  font-size: 32rpx;
  margin-top: 80rpx;
  display: inline-block;
  white-space: nowrap; 
  width: 100%; 
  overflow: hidden;
  text-overflow:ellipsis;
}
.info .intro {
  color: #707070;
  font-size: 24rpx;
  margin-top: 22rpx;
}
.listen {
  margin-top: 30rpx;
  position: absolute;
  bottom: 200rpx;
  width: 100%;
}
.listen-iphoneX {
  bottom: 268rpx;
}
.listen slider {
  margin-bottom: 0;
  margin-left:60rpx;
  margin-right:60rpx;
}
.listen .time {
  height: 20rpx;
  line-height: 20rpx;
  font-size: 20rpx;
  color: #707070;
  padding: 0 60rpx;
}
.listen .time view:nth-child(1) {
  float: left;
}
.time view:nth-child(2) {
  float: right;
}
.listen .operation {
  margin-top: 60rpx;
  height: 118rpx;
}
.listen .operation .left {
  width: 30%;
  float: left;
  text-align: right;
}
.listen .operation .left image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 39rpx;
}
.listen .operation .center {
  width: 40%;
  float: left;
  text-align: center;
}
.listen .operation .center image {
  width: 118rpx;
  height: 118rpx;
}
.listen .operation .right {
  width: 30%;
  float: left;
  text-align: left;
}
.listen .operation .right image {
  width: 40rpx;
  height: 40rpx;
  margin-top: 39rpx;
}
.bottom {
  position: absolute;
  bottom: 0;
  height: 120rpx;
  width: 100%;
}
.iphoneX {
  height: 188rpx;
}
.bottom .item {
  width: 50%;
  display: inline-block;
  border-top: 1rpx solid #dfdfdf;
  text-align: center;
  color: #707070;
  font-size: 22rpx;
}
.bottom .item image {
  width: 29rpx;
  height: 28rpx;
  margin-top: 25rpx;
}
.bottom .item view {
  margin-top: 10rpx;
}

.tip {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  background-color:rgba(0,0,0,0.5);
  z-index: 9;
}
.tip .box {
  width: 563rpx;
  height: 313rpx;
  margin: 0 auto;
  margin-top: 350rpx;
  border-radius: 20rpx;
  background-color: #ffffff;
  text-align: center;
  position: relative;
}
.tip .box .test {
  font-size: 32rpx;
  color: #282828;
  line-height:50rpx;
}
.tip .box .top {
  padding-top: 70rpx;
}
.tip .box .tip-bottom {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  border-top: 1rpx solid #cccccc;
}
.tip .box .tip-bottom view {
  width: 280rpx;
  text-align: center;
  font-size: 32rpx;
  float: left;
  line-height: 40rpx;
  margin-top: 20rpx;
}
.tip .box .tip-bottom .border-r {
  border-right: 1rpx solid #cccccc; 
}
.tip .box .tip-bottom .show {
  color: #29abae;
}
.tip .box .vip-test {
  font-size: 32rpx;
  padding: 24rpx;
}
.tip .box .vip-intro {
  font-size: 26rpx;
  padding: 0 60rpx;
}
