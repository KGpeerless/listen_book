page{  
  background: #f5f5f5;  
}  

.container {  
  position: absolute;  
  width: 100%;  
  height: 100%;  
  background-color: #fff;  
  color: #000; 
}

.nav_left{  
  position: absolute;
  top: 0;
  left: 0;
  width: 25%;  
  height: 100%;  
  background: #f5f5f5;  
  text-align: center;  
  font-weight: bold;
}  

.nav_left .nav_left_items{  
  height: 90rpx;  
  line-height: 90rpx;  
  /* border-bottom: 2rpx solid #dedede;   */
  font-size: 28rpx; 
}  

.nav_left .nav_left_items.active{  
  background: white;  
  color: #29abae; 
  font-weight: bold;
}  

.nav_right{  
  position: absolute;
  top: 0;  
  right: 0;  
  flex: 1;  
  width: 75%;  
  padding: 20rpx;  
  box-sizing: border-box;  
  background: #fff;  
}  

.nav_right .nav_right_items{  
  float: left;  
  width: 40%;  
  margin-left: 7%;
  height: 360rpx;  
  text-align: center;  
}  

.nav_right .nav_right_items image{  
  height: 240rpx;
  width: 180rpx;
  margin-top: 30rpx;  
}  

.nav_right .nav_right_items text{  
  display: block;  
  margin-top: 10rpx;  
  font-size: 26rpx;  
  color: black;
  display: -webkit-box;
  white-space: pre-wrap;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}

.nodata_text {
  color: black;
  font-size: 26rpx;  
  text-align: center;  
}